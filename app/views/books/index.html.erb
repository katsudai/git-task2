<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% @books.each do |book| %>
  <tbody>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
  </tbody>
  <% end %>
</table>

<h2>New book</h2>
<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
    <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<% if @book.errors.any? %>
  <%= form_with model: @book, url: 'books', method: :post do |f| %>
    <div class="field">
      <div class="field_with_errors">
        <label>Title</label>
      </div>
      <div class="field_with_errors">
        <%= f.text_field :title %>
      </div>
    </div>
  
    <div class="field">
      <div class="field_with_errors">
        <label>Body</label>
      </div>
      <div class="field_with_errors">
        <%= f.text_area :body %>
      </div>  
    </div>
  
    <%= f.submit "Create Book" %>
  <% end %>
<% else %>
  <%= form_with model: @book, url: 'books', method: :post do |f| %>
    <div class="field">
      <label>Title</label>
      <%= f.text_field :title %>
    </div>
  
    <div class="field">
      <label>Body</label>
      <%= f.text_area :body %>
    </div>
  
    <%= f.submit "Create Book" %>
  <% end %>
<% end %>